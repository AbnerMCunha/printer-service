{
  "name": "printer-service",
  "version": "1.1.0",
  "description": "Serviço local de impressão automática de pedidos para impressoras térmicas",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:electron": "npm run build && electron-builder",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "electron": "electron electron/main.js",
    "electron:dev": "npm run build && electron electron/main.js",
    "get-token": "node scripts/get-token.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "printer",
    "thermal",
    "escpos",
    "restaurant",
    "orders"
  ],
  "author": "Cardapix",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2"
  },
  "build": {
    "appId": "com.cardapix.printer-service",
    "productName": "Printer Service - Cardapix",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/*.{md,ts}",
      "!**/*.{ts,map}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}

